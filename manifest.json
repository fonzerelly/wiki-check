{
  "manifest_version": 2,
  "name": "wiki-check",
  "version": "2.0.0",

  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs", 
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*", "file:///*:/*"],
      "js": ["contentScript.js"],
      "css": ["myStyles.css"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  }

}
